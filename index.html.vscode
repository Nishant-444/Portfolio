		<style>
			@font-face {
				font-family: 'JetBrains Mono';
				src: url('./assets/fonts/JetBrainsMono-Regular.woff2') format('woff2');
				font-weight: 400;
				font-style: normal;
			}
			@font-face {
				font-family: 'JetBrains Mono';
				src: url('./assets/fonts/JetBrainsMono-Bold.woff2') format('woff2');
				font-weight: 700;
				font-style: normal;
			}

			:root {
				/* Night Owl Theme */
				--bg-app: #011627;
				--bg-editor: #011627;
				--bg-panel: #01111d;
				--border: rgba(95, 126, 151, 0.2);
				--tab-active-border: #82aaff;

				/* Syntax Highlighting - Night Owl (Italic) */
				--text-main: #d6deeb;
				--comment: #637777;
				--keyword: #c792ea;
				--function: #82aaff;
				--string: #ecc48d;
				--variable: #addb67;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: 'JetBrains Mono', Consolas, monospace;
				background: var(--bg-editor);
				color: var(--text-main);
				overflow: hidden;
				height: 100vh;
			}

			.container {
				display: flex;
				flex-direction: column;
				height: 100vh;
			}

			/* Top Bar */
			.top-bar {
				background: var(--bg-app);
				border-bottom: 1px solid var(--border);
				display: flex;
				align-items: center;
				height: 40px;
				padding: 0 15px;
			}

			.hamburger {
				display: none;
				background: none;
				border: none;
				color: var(--text-main);
				font-size: 20px;
				cursor: pointer;
				padding: 5px 10px;
				margin-right: 10px;
			}

			.logo {
				font-size: 13px;
				color: var(--text-main);
				white-space: nowrap;
			}

			/* Main Layout */
			.main-layout {
				display: flex;
				flex: 1;
				overflow: hidden;
			}

			/* Sidebar */
			.sidebar {
				width: 220px;
				background: var(--bg-panel);
				border-right: 1px solid var(--border);
				overflow-y: auto;
				transition: left 0.3s;
			}

			.sidebar-header {
				padding: 12px 15px;
				font-size: 11px;
				text-transform: uppercase;
				color: #5f7e97;
				letter-spacing: 1px;
				font-weight: 700;
			}

			.tree-folder {
				padding: 6px 15px;
				cursor: pointer;
				display: flex;
				align-items: center;
				gap: 8px;
				font-size: 13px;
				color: var(--text-main);
				user-select: none;
			}

			.tree-arrow {
				font-size: 10px;
				transition: transform 0.2s;
			}

			.tree-folder.open .tree-arrow {
				transform: rotate(90deg);
			}

			.file-item {
				padding: 6px 15px 6px 35px;
				cursor: pointer;
				display: flex;
				align-items: center;
				gap: 8px;
				font-size: 13px;
				color: var(--text-main);
				transition: background 0.2s;
			}

			.file-item:hover {
				background: rgba(130, 170, 255, 0.1);
			}

			.file-item.active {
				background: rgba(130, 170, 255, 0.15);
				color: var(--tab-active-border);
			}

			.file-icon {
				font-size: 14px;
			}

			/* Content Area */
			.content-area {
				flex: 1;
				display: flex;
				flex-direction: column;
				overflow: hidden;
			}

			.tab-container {
				display: flex;
				overflow-x: auto;
				background: var(--bg-app);
				border-bottom: 1px solid var(--border);
				-ms-overflow-style: none;
				scrollbar-width: none;
			}

			.tab-container::-webkit-scrollbar {
				display: none;
			}

			.tab {
				padding: 0 15px;
				height: 35px;
				display: inline-flex;
				align-items: center;
				border-right: 1px solid var(--border);
				cursor: pointer;
				font-size: 13px;
				color: #5f7e97;
				background: var(--bg-app);
				transition: all 0.2s;
				flex-shrink: 0;
				position: relative;
			}

			.tab:hover {
				background: rgba(130, 170, 255, 0.08);
			}

			.tab.active {
				background: var(--bg-editor);
				color: var(--text-main);
				border-top: 2px solid var(--tab-active-border);
			}

			/* Editor */
			.editor {
				flex: 1;
				overflow-y: auto;
				background: var(--bg-editor);
			}

			.editor-content {
				display: flex;
				padding: 30px;
				min-height: 100%;
				max-width: 1200px;
			}

			.line-numbers {
				color: #5f7e97;
				font-size: 13px;
				line-height: 1.6;
				text-align: right;
				padding-right: 25px;
				user-select: none;
				min-width: 50px;
				flex-shrink: 0;
			}

			.code-area {
				flex: 1;
				font-size: 13px;
				line-height: 1.6;
				white-space: pre-wrap;
				word-wrap: break-word;
			}

			.view-content {
				display: none;
			}

			.view-content.active {
				display: block;
			}

			/* Syntax Highlighting */
			.comment {
				color: var(--comment);
				font-style: italic;
			}

			.keyword {
				color: var(--keyword);
				font-style: italic;
			}

			.function {
				color: var(--function);
				font-style: italic;
			}

			.string {
				color: var(--string);
			}

			.variable {
				color: var(--variable);
			}

			.property {
				color: var(--variable);
			}

			.punctuation {
				color: var(--text-main);
			}

			/* Projects Grid */
			.projects-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 20px;
				padding: 30px;
				max-width: 1400px;
				margin: 0 auto;
			}

			.project-card {
				background: rgba(255, 255, 255, 0.02);
				border: 1px solid var(--border);
				border-radius: 6px;
				padding: 20px;
				font-size: 13px;
				line-height: 1.6;
			}

			.project-card h3 {
				color: var(--function);
				font-size: 16px;
				margin-bottom: 10px;
			}

			.project-card .desc {
				color: var(--text-main);
				margin-bottom: 12px;
			}

			.project-card .stack {
				display: flex;
				flex-wrap: wrap;
				gap: 8px;
				margin-bottom: 15px;
			}

			.project-card .stack span {
				background: rgba(130, 170, 255, 0.1);
				color: var(--tab-active-border);
				padding: 4px 10px;
				border-radius: 4px;
				font-size: 11px;
			}

			.project-card .links {
				display: flex;
				gap: 12px;
			}

			.project-card .links a {
				color: var(--tab-active-border);
				text-decoration: none;
				padding: 6px 12px;
				border: 1px solid var(--tab-active-border);
				border-radius: 4px;
				font-size: 12px;
				transition: all 0.2s;
			}

			.project-card .links a:hover {
				background: var(--tab-active-border);
				color: #011627;
			}

			/* Footer */
			.footer {
				background: var(--bg-app);
				border-top: 1px solid var(--border);
				padding: 3px 15px;
				display: flex;
				gap: 20px;
				font-size: 12px;
				color: var(--text-main);
				height: 22px;
				align-items: center;
			}

			/* Mobile Styles */
			@media (max-width: 768px) {
				.hamburger {
					display: block;
				}

				.sidebar {
					position: fixed;
					left: -100%;
					top: 40px;
					bottom: 0;
					z-index: 999;
				}

				.sidebar.open {
					left: 0;
				}

				.sidebar-backdrop {
					display: none;
					position: fixed;
					top: 40px;
					left: 0;
					right: 0;
					bottom: 0;
					background: rgba(0, 0, 0, 0.7);
					z-index: 998;
				}

				.sidebar-backdrop.open {
					display: block;
				}

				.projects-grid {
					grid-template-columns: 1fr;
				}

				.editor-content {
					padding: 15px;
				}

				.line-numbers {
					padding-right: 10px;
					min-width: 30px;
				}
			}
		</style>
